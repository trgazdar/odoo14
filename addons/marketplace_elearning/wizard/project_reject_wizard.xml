<odoo>
	<data>        
        <record id="product_rejection_wizard" model="ir.ui.view">
            <field name="name">Product rejection wizard</field>
            <field name="model">product.reject.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <separator colspan="6" />
                    <field name="text" colspan="4" nolabel="1" readonly="1" widget="html" />
                    <newline/>
                    <separator colspan="6" />
                    <footer>
                        <button name="reject_course_product" type="object" class="oe_highlight" string="Reject" />
                        <button special="cancel" class="oe_highlight" string="Close" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_unpublish_wizard" model="ir.ui.view">
            <field name="name">Product unpublish wizard</field>
            <field name="model">product.reject.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <separator colspan="6" />
                    <field name="text" colspan="4" nolabel="1" readonly="1" widget="html" />
                    <newline/>
                    <separator colspan="6" />
                    <footer>
                        <button name="unpublished_course_product" type="object" class="oe_highlight" string="Unpublish" />
                        <button special="cancel" class="oe_highlight" string="Close" />
                    </footer>
                </form>
            </field>
        </record>
        
	</data>
</odoo>